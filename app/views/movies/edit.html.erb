<div class="row justify-content-center">
  <div class="col-md-10">
    <div class="new-play-form">
      <h1>Edit Movie</h1>
      <%= simple_form_for @movie, html: {multipart: true} do |f| %>
        <%= f.select :category_id, @categories %>
        <%= f.input :title, label: "Movie Title" %>
        <%= f.input :description %>
        <%= f.input :director %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>

