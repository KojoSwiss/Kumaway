<h1 class="current-category">
  <%= params[:category] %>
</h1>
<% if @movies.count == 0 %>
  <h3>No Movies in this category</h3>
<% else %>
  <div class="play">
  <% @movies.each do |movie| %>
      <a href="/movies/ <%= movie.id %> ">
      <%= cl_image_tag movie.photo.key, width: 360, height: 270 %>
      </a>
  <% end %>
  </div>
<% end %>

