<h2><%= @movie.title %></h2>
<h3><%= @movie.director %></h3>
<h4><%= @movie.category.name %></h4>
<p><%= @movie.description %></p>

<%= cl_image_tag @movie.photo.key, height: 300, width: 400, crop: :fill %>

<div class="links btn-group">
  <% if user_signed_in? %>
    <% if @movie.user_id == current_user.id %>
      <%= link_to 'Edit', edit_movie_path %>
      <%= link_to 'Delete', movie_path, method: :delete, data: {confirm: "Are you sure?"}  %>
    <% end %>
  <% end %>
  <%= link_to 'Back', :back %>
</div>
